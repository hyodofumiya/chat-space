%section.chat-main
  .chat-main__group-info
    .left-items
      .left-items__group-name
        group name
      .left-items__member-lists
        member
        .left-items__member
    .edit-btn
      = link_to "#", class: "edit-btn__btn" do
        ="Edit"
  .chat-main__tweet-lists
    .tweet
      .tweet__info
        .tweet__info__user-name
          ユーザー名
        .tweet__info__date
          date
      .tweet__value
        tweet内容
  .chat-main__tweet-input-form
    = form_for @tweet,(name: "form" class: "form") do |f|
      .input-field
        = f.text_area(class="input-field__tweet" row="1" font="50px" placeholder="type a messege")
        = f.label :btn (for="choose-pic-btn" class="input-field__pic")
          = f.file :btn (class="input-field__pic__choose-btn" id="choose-pic-btn")
          = icon('far','file-image')
      = f.submit "Send" (name="send-btn"  class="form__submit-btn")
