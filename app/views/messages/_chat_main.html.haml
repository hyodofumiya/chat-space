%section.chat-main
  .chat-main__group-info
    .left-items
      .left-items__group-name
        = @group.name
      .left-items__member-lists
        member:
        - if @users.present?
          - @users.each do |user|
            .left-items__member
              = user.name
    .edit-btn
      = link_to edit_group_path(@group), class: "edit-btn__btn" do
        ="Edit"
  .chat-main__tweet-lists
    = render @messages
  .chat-main__tweet-input-form
    = form_for [@group, @message] do |f|
      .form
        = f.text_field :tweet, class: "form__tweet", placeholder: "type a messege"
        = f.label :"image", class: "form__pic" do
          = f.file_field :'image', class: "form__pic__choose-btn"            
          = icon('far','file-image')
      = f.submit "Send", class: "new_message__submit-btn"
