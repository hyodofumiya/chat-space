.message{data: {message: {id: message.id}}}
  .message__info
    .message__info__user-name
      = message.user.name
    .message__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__value
    - if message.tweet.present?
      %p.message__value__tweet
        = message.tweet
    = image_tag message.image.url, class: 'message__value__image' if message.image.present?